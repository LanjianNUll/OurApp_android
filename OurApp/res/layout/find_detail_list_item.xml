<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    <ImageView
	       android:id="@+id/other_people_head_pic"
	       android:layout_width="30dp"
	       android:layout_height="30dp"
	 		android:layout_marginLeft="10dp"
	 		android:layout_marginTop="5dp"
	       android:src="@drawable/ic_launcher"/>
	   
	    <TextView
			android:id="@+id/other_people_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_toRightOf="@id/other_people_head_pic"
			android:text="风的背后是满怀"
			android:textSize="16sp" />
	    
		<TextView
	       android:id="@+id/other_people_say"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_alignParentLeft="true"
	       android:layout_marginTop="5dp"
	       android:layout_below="@+id/other_people_head_pic"
	       android:layout_marginLeft="25dp"
	       android:text="遇见就是缘分，缘分的事说说的定呢遇见就是缘分，缘分的事说说的定呢遇见就是缘分，缘分的事说说的定呢遇见就是缘分，缘分的事说说的定呢遇见就是缘分，缘分的事说说的定呢"
	       android:textSize="12sp" />
	
		<TextView
		    android:id="@+id/other_people_state"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_marginTop="12dp"
		    android:layout_marginRight="10dp"
		    android:text="用户的状态" 
		    android:textSize="12sp"/>
		
		<TextView android:id="@+id/other_people_ctime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="10dp"
		    android:layout_below="@id/other_people_say"
		    android:textSize="12sp"
		    android:text="时间"/>
		
	</RelativeLayout>
</LinearLayout>
