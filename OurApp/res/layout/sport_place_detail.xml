<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <RelativeLayout
        android:id="@+id/detail_sport_top"
        android:layout_width="match_parent"
        android:layout_height="59dp" >
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="详  情"
            android:textSize="22sp" />
        <ImageView
            android:id="@+id/detail_sport_top_comeback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_comeback" />

        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="点   评"
            android:textSize="15sp"
            android:background="@drawable/dianping"/>

    </RelativeLayout>

<ScrollView  
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/detail_sport_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
    
    <RelativeLayout
        android:id="@+id/detail_sport_place_names"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_sport_top" >

        <TextView
            android:id="@+id/detail_sport_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="14dp"
            android:text="sportPlace name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detail_sport_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="53dp"
            android:text="location"
            android:textSize="12sp" />
          
         <TextView
            android:id="@+id/detail_sport_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/detail_sport_location"
            android:layout_marginRight="10dp"
            android:text="9.7"
            android:textSize="12sp" />

         <TextView
            android:id="@+id/detail_sport_value_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/detail_sport_value"
            android:layout_marginRight="10dp"
            android:text="评分"
            android:textSize="12sp" />
         
        <TextView
            android:id="@+id/detail_sport_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="500m"
            android:textSize="12sp" />
    </RelativeLayout>

     <RelativeLayout
        android:id="@+id/detail_sport_place_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/detail_sport_place_names" >
        
        <TextView
            android:id="@+id/detail_sport_place_messagetext"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:text="1、挑战地心引力，引爆篮球魅力！2、动感篮球，快乐我秀3、逢投必进,精彩我秀,可艺篮球,魅力无限4、勇往直前,球球必进5、以篮球之名,投盐都风采6、球球俱进,分分必得,不畏强暴,所向7、三分线外,手起足落,完美弧线,得分容易" />   
    </RelativeLayout>
      
    <RelativeLayout
        android:id="@+id/detail_sport_place_pic_Relayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
         android:gravity="center_horizontal" 
        android:layout_below="@+id/detail_sport_place_names" >
	        <LinearLayout 
	            android:id="@+id/detail_sport_place_pic_layout"
	            android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical">
		        <com.loopj.android.image.SmartImageView
		            android:id="@+id/detail_sport_place_pic_one"
		            android:layout_width="match_parent"
		            android:layout_height="250dp"
		            android:src="@drawable/tupian"/>
		         <com.loopj.android.image.SmartImageView
		            android:id="@+id/detail_sport_place_pic_two"
		            android:layout_width="match_parent"
		            android:layout_height="250dp"
		            android:src="@drawable/tupian"/>
		         <com.loopj.android.image.SmartImageView
		            android:id="@+id/detail_sport_place_pic_three"
		            android:layout_width="match_parent"
		            android:layout_height="250dp"
		            android:src="@drawable/tupian"/>
		        
	        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/detail_sport_place_route"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/detail_sport_place_pic_layout" >

         <TextView
             android:id="@+id/recommend_route_textview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentLeft="true"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="20dp"
             android:text="推荐路线" />

         <TextView
             android:id="@+id/detail_sport_place_recommend_route"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="30dp"
             android:layout_toRightOf="@+id/recommend_route_textview"
             android:text="8路公交" />
    
     </RelativeLayout>
    <RelativeLayout android:id="@+id/someTips_openTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/hee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="开放时间" />

        <TextView
            android:id="@+id/open_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/hee"
            android:text="全天"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/someTips_suitPeople"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/hee1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="适合人群" />

        <TextView
            android:id="@+id/suitPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/hee1"
            android:text="不限" />
    </RelativeLayout>
    
    <RelativeLayout android:id="@+id/someTips_make_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/hee2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="交友指数" />

        <TextView
            android:id="@+id/makeFriendsIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/hee2"
            android:text="9.9"/>
    </RelativeLayout>
    
     <RelativeLayout android:id="@+id/someTips_deviceinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_marginTop="20dp"
       		>

        <TextView
            android:id="@+id/hee3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:text="设备完整" />

        <TextView
            android:id="@+id/deviceinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/hee3"
            android:text="9.5"/>
    </RelativeLayout>
    
       <RelativeLayout android:id="@+id/someTips_shopInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:layout_marginTop="20dp"
       >

        <TextView
            android:id="@+id/hee4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="周边店铺" />
        
         <TextView
            android:id="@+id/shopone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hee4"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:text="美云超市"/>
         <TextView
            android:id="@+id/shoptwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:textSize="15sp"
            android:text="七家福超市"/>
         <TextView
            android:id="@+id/shopthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shoptwo"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20dp"
             android:textSize="15sp"
            android:text="富家宾馆"/>
         <TextView
            android:id="@+id/dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopthree"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10sp"
            android:layout_centerHorizontal="true"
             android:textSize="18sp"
            android:text="点     评"/>
    </RelativeLayout>   
     <ListView
         android:id="@+id/dianping_for_sport_place"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@id/scrollview" >
     </ListView> 
       
    </LinearLayout>
    
   </ScrollView> 
   


   <!-- 加载动画 -->
   <RelativeLayout 
       android:id="@+id/jiazai"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/detail_sport_top"
       android:visibility="gone">
       <ImageView
           android:id="@+id/jiazai_image"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
           android:background="@drawable/animloading" />
       
   </RelativeLayout>
   
    <!--网络异常界面-->
   <RelativeLayout 
       android:id="@+id/errorpage"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@id/detail_sport_top"
       android:visibility="gone">
       <ImageView android:id="@+id/errorTip"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/error_tip"/>
       
       <TextView
           android:id="@+id/sssd"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/errorTip"
	       android:layout_centerHorizontal="true"
           android:textColor="#ff0000"
           android:text="网络异常，加载失败" />
       
   </RelativeLayout>
   
 </RelativeLayout>
