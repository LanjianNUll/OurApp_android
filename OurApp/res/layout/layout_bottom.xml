<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#eee"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_bottom_lin_layout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/bottom_mainpage_lin_layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/bottom_mainpage_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/home" />

                <TextView
                    android:id="@+id/bottom_mainpage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
          	  	android:id="@+id/bottom_secondPage_lin_layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bottom_secondPage_iamge"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/nearby" />

                <TextView
                    android:id="@+id/bottom_secondPage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="附近"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/bottom_thirdPage_lin_layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bottom_thirdPage_iamge"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/find" />

                <TextView
                    android:id="@+id/bottom_thirdPage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发现"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/bottom_lastPage_lin_layout"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/bottom_lastPage_image"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/me" />

                <TextView
                    android:id="@+id/bottom_lastPage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我"
                    android:textColor="#A6A6A6"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/bottom_tabline"
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:background="#000" />

</LinearLayout>